<% include partials/header.ejs %>
<% include partials/nav-bar.ejs %>

<div id="contact-info" class="container">
	<div class="row">
		<div id="form-wrapper" class="col-12">
			<p class="lead">Email us with a picture or question regarding any of our services and we will do our best to help you achieve your dream look.</p>
			<form action="/contact" method="POST">
				<div class="form-group">
			    <label for="queryEmail">Email address</label>
			    <input name="queryEmail" type="email" class="form-control" id="queryEmail" placeholder="name@example.com">
			  </div>
				<div class="form-group">
			    <label for="queryText">Question</label>
			    <textarea name="queryText" class="form-control" id="queryText" rows="3"></textarea>
			  </div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>

	<div class="row" id="tag-line">
		<h4 class="col-12">Better yet, see us in person!</h4>
		<p class="col-12">We love our customers, so feel free to visit during normal business hours.</p>
	</div>

	<div class="row">
		<div class="col-md-3 offset-md-3">
			<div id="hours">
				<h6>Hours</h6>
				<p>Mon  Closed</p>
				<p>Tue  Closed</p>
				<p>Wed  10:00 - 22:00</p>
				<p>Thu  12:00 - 16:00</p>
				<p>Fri  10:00 - 18:00</p>
				<p>Sat  08:00 - 16:00</p>
				<p>Sun  By Appointment</p>
			</div>
		</div>
		<div class="col-md-3">
			<div id="address">
				<h6>Address</h6>
				<p>3rd Floor, 25 Albion Place, LS1 6JS, Leeds, West Yorkshire, England, United Kingdom</p>
			</div>
		</div>
	</div>
</div>



