<% include ../partials/header.ejs %>
<% include ../partials/nav-bar.ejs %>

<% include ../partials/dashboard.ejs %>

<div id="" class="container">
	<div class="row justify-content-center">
		<div id="" class="col-md-6">
			<p class="lead">Add a new treatment</p>

			<!-- EDIT FORM -->
			<form id="edit-submit" action="/treatments/<%= treatment._id %>?_method=PUT" method="POST">
				<div class="form-group">
			    <label for="#add-group">New treatment group<br>
					(styling, treatments, creative, extensions)</label>
			    <input name="treatment[group]" class="form-control" id="add-group" value="<%=treatment.group%>">
			  </div>
				<div class="form-group">
			    <label for="add-name">New treatment name</label>
			    <input name="treatment[name]" class="form-control" id="add-name" value="<%=treatment.name%>">
			  </div>
				<div class="form-group">
			    <label for="#add-price">New treatment price</label>
			    <input name="treatment[price]" class="form-control" id="add-price" value="<%=treatment.price%>">
			  </div>
				<div class="form-group">
			    <label for="add-desc">New treatment description</label>
			    <textarea name="treatment[desc]" class="form-control" id="add-desc" rows="3"><%=treatment.desc%></textarea>
			  </div>
			</form>

			<!-- DELETE FORM -->
			<form id="delete" action="/treatments/<%= treatment._id %>?_method=DELETE" method="POST"></form>

			<!-- BUTTON ATTACHED TO EDIT AND DELETE FORMS -->
			<button type="submit" form="edit-submit" class="btn btn-primary">Submit</button>
			<button class="btn btn-danger" form="delete">Delete</button>

		</div>
	</div>

<% include ../partials/footer.ejs %>
